<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context=".CameraLauncher">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/space_kitten"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="121dp"
        android:layout_height="55dp"
        android:id="@+id/take_photo"
        android:layout_gravity="center"
        android:gravity="left"
        android:background="@drawable/take_photot"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp" />

    <Button
        android:layout_width="121dp"
        android:layout_height="55dp"
        android:id="@+id/load_from_gallery"
        android:layout_gravity="center"
        android:gravity="left"
        android:background="@drawable/select"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_alignTop="@+id/take_photo"
        android:layout_toRightOf="@+id/take_photo"
        android:layout_toEndOf="@+id/take_photo" />

    <Button
        android:layout_width="121dp"
        android:layout_height="55dp"
        android:id="@+id/load_notes"
        android:layout_gravity="center"
        android:gravity="left"
        android:background="@drawable/saved_links"
        android:layout_below="@+id/take_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />


</RelativeLayout>